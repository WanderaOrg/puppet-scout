account_key: <%= scope['scoutd::account_key'] %>
hostname: <%= scope['scoutd::hostname'] %>
display_name: <%= scope['scoutd::display_name'] %>
log_file: <%= scope['scoutd::log_file'] %>
ruby_path: <%= scope['scoutd::ruby_path'] %>
environment: <%= scope['scoutd::environment'] %>
<% if scope['scoutd::roles'] -%>
roles: <%= scope['scoutd::roles'].join(',') %>
<% end -%>
http_proxy: <%= scope['scoutd::http_proxy'] %>
https_proxy: <%= scope['scoutd::https_proxy'] %>
statsd:
  addr: <%= scope['scoutd::statsd_address'] %>
  enabled: <%= scope['scoutd::statsd_enabled'] %>
